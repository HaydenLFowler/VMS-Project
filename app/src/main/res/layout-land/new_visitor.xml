<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newvisitorTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="New Visitor"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/home_3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@drawable/ic_baseline_home_24"
                app:backgroundTint="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="0.2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="691dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="40dp">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="112dp"
                android:layout_marginLeft="112dp"
                android:text="Name: "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/enterNameTV"
                android:layout_width="194dp"
                android:layout_height="44dp"
                android:layout_marginEnd="340dp"
                android:layout_marginRight="340dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="701dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reasonTV"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:layout_marginStart="115dp"
                android:layout_marginLeft="115dp"
                android:text="Select Reason: "
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Space
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/static_spinner"
                android:layout_width="201dp"
                android:layout_height="39dp"
                android:layout_marginEnd="336dp"
                android:layout_marginRight="336dp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <!--<Spinner
        android:id="@+id/dynamic_spinner"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:layout_marginEnd="348dp"
        android:layout_marginRight="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />**/-->

</androidx.constraintlayout.widget.ConstraintLayout>